<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	android:gravity="center_vertical">
	
 	<LinearLayout android:orientation="vertical"   
        android:layout_width="wrap_content"    
   		android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" android:id="@+id/linearLayout1">  
       
	<LinearLayout android:orientation="vertical"   
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content">  
        
         <TextView android:id="@+id/group_name"    
           android:layout_width="wrap_content"   
            android:layout_height="wrap_content"    
             android:text="QQQ"
            android:textColor="@color/gray"   
             android:textSize="22px" />    
             
        <LinearLayout android:orientation="horizontal"  
             android:layout_width="wrap_content"    
       		 android:layout_height="wrap_content"> 
       		<ImageView  
                 	android:id="@+id/clock" 
      	android:src="@drawable/clock"
      	 android:layout_height="36dip" 
      	 android:layout_width="36dip" />
        	 <TextView android:id="@+id/start_time"    
           android:layout_width="wrap_content"   
            android:layout_height="wrap_content"    
            android:textColor="@color/gray"   
             android:textSize="18px" />    
             
             <TextView  
           android:layout_width="wrap_content"   
            android:layout_height="wrap_content"    
            android:textColor="@color/gray" 
            android:text=" ~ "  
             android:textSize="20px" />
      
             
       		 <TextView android:id="@+id/end_time"    
             android:layout_width="wrap_content"   
             android:layout_height="wrap_content"    
             android:textColor="@color/gray"   
            android:textSize="18px" />    
            
          </LinearLayout>    
  </LinearLayout>    

	<LinearLayout android:orientation="horizontal"   
        android:layout_width="wrap_content"    
        android:layout_height="wrap_content">   
      	<ImageView 
      	android:id="@+id/upload" 
      	android:src="@drawable/upload"
      	 android:layout_height="36dip" 
      	 android:layout_width="36dip" 
      	  />
      	  
 	 <TextView
  		android:id="@+id/upload_link"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Upload"
          android:textColor="@color/gray" 
 	 />
        
      	<ImageView 
      	android:id="@+id/download" 
      	android:src="@drawable/download"
      	 android:layout_height="36dip" 
      	 android:layout_width="36dip" 
      	  />
       
  	<TextView
		android:id="@+id/download_link"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Download"
          android:textColor="@color/gray" 
	/>
    </LinearLayout>   
       </LinearLayout>
      	<ImageView android:layout_width="wrap_content" 
      	android:id="@+id/i_more" 
      	android:src="@drawable/ic_list_more"
      	 android:layout_height="wrap_content" 
      	 android:layout_centerVertical="true"
      	  android:layout_alignParentRight="true">
      	  </ImageView>
 
</RelativeLayout>